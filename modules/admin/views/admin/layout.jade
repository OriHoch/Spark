doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        // Meta, title, CSS, favicons, etc.
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Spark Admin
        // Bootstrap
        link(href='/bower_components/gentelella/vendors/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        // Font Awesome
        link(href='/bower_components/gentelella/vendors/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        // iCheck
        link(href='/bower_components/gentelella/vendors/iCheck/skins/flat/green.css', rel='stylesheet')
        // bootstrap-progressbar
        link(href='/bower_components/gentelella/vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css', rel='stylesheet')
        // jVectorMap
        link(href='/bower_components/gentelella/production/css/maps/jquery-jvectormap-2.0.3.css', rel='stylesheet')
        // datatables
        link(href='/bower_components/gentelella/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css', rel='stylesheet')
        link(href='/bower_components/gentelella/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css', rel='stylesheet')
        // Custom Theme Style
        link(href='/bower_components/gentelella/build/css/custom.min.css', rel='stylesheet')

    body.nav-md
        .container.body
            .main_container
                .col-md-3.left_col
                    .left_col.scroll-view
                        .navbar.nav_title(style='border: 0;')
                            a.site_title(href='index.html')
                                i.fa.fa-paw
                                span Spark Admin
                        .clearfix
                        // START menu profile quick info
                        .profile
                            .profile_pic
                                img.img-circle.profile_img(src='/bower_components/gentelella/production/images/user.png', alt='...')
                            .profile_info
                                span Welcome,
                                h2= user.attributes.fullName ? user.attributes.fullName : user.attributes.email
                        // END menu profile quick info
                        p
                        | &nbsp;

                        // START sidebar menu
                        #sidebar-menu.main_menu_side.hidden-print.main_menu
                            .menu_section
                                ul.nav.side-menu
                                    for item in sideBar
                                        li
                                            if item.children
                                                a
                                                    i(class="fa fa-"+item.icon)
                                                    = "|  "+item.title
                                                    span.fa.fa-chevron-down
                                                ul.nav.child_menu
                                                    for child in item.children
                                                        li
                                                            a(href=child.href)= child.title
                                            else
                                                a(href=item.href)
                                                    i(class="fa fa-"+item.icon)
                                                    = "|  "+item.title
                        // END sidebar menu
                        // START menu footer buttons
                        if sideBarFooter
                            .sidebar-footer.hidden-small
                                for item in sideBarFooter
                                    a(data-toggle='tooltip', data-placement='top', title=item.title)
                                        span(class="glyphicon glyphicon-"+item.glyphicon, ariaHidden='true')
                        // END menu footer buttons
                // START top navigation
                .top_nav
                    .nav_menu
                        nav(role='navigation')
                            .nav.toggle
                                a#menu_toggle
                                    i.fa.fa-bars
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a.user-profile.dropdown-toggle(data-toggle='dropdown', aria-expanded='false')
                                        img(src='/bower_components/gentelella/production/images/user.png', alt='')
                                        = user.attributes.fullName ? user.attributes.fullName : user.attributes.email
                                        if showUserMenu
                                            span.fa.fa-angle-down
                                    if showUserMenu
                                        ul.dropdown-menu.dropdown-usermenu.pull-right
                                            li
                                                a(href='javascript:;')  Profile
                                            li
                                                a(href='javascript:;')
                                                    span.badge.bg-red.pull-right 50%
                                                    span Settings
                                            li
                                                a(href='javascript:;') Help
                                            li
                                                a(href='login.html')
                                                    i.fa.fa-sign-out.pull-right
                                                    |  Log Out
                                if notifications
                                    li.dropdown(role='presentation')
                                        a.dropdown-toggle.info-number(href='javascript:;', data-toggle='dropdown', aria-expanded='false')
                                            i.fa.fa-envelope-o
                                            span.badge.bg-green= notifications.number
                                        ul#menu1.dropdown-menu.list-unstyled.msg_list(role='menu')
                                            if notifications.items
                                                for item in notifications.items
                                                    li
                                                        a
                                                            span.image
                                                                img(src=item.img.src, alt=item.img.alt)
                                                            span
                                                                span= item.title
                                                                span.time= item.time
                                                            span.message= item.message
                                                li
                                                    .text-center
                                                        a
                                                            strong= notifications.all.text
                                                            i.fa.fa-angle-right
                                                            href= notifications.all.href
                // END top navigation

                // START page content
                .right_col(role='main')
                    block content
                    br
                // END page content

                // START footer content
                footer
                    .pull-right
                        | /gentelella - Bootstrap Admin Template by
                        a(href='https://colorlib.com') Colorlib
                    .clearfix
                // END footer content

        // jQuery
        script(src='/bower_components/gentelella/vendors/jquery/dist/jquery.min.js')
